<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemChiplst"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_1x"
    android:layout_marginBottom="@dimen/margin_1x"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/chip01"
        android:layout_width="@dimen/sizeChip50"
        android:layout_height="@dimen/sizeChip50"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_24"
        android:background="@drawable/chip_empty"
        android:layout_marginStart="@dimen/margin_1x"
        android:layout_marginTop="@dimen/margin_1x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/chip02"
        android:layout_width="@dimen/sizeChip50"
        android:layout_height="@dimen/sizeChip50"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_24"
        android:background="@drawable/chip_empty"
        android:layout_marginStart="@dimen/margin_1x"
        android:layout_marginTop="@dimen/margin_1x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chip01"/>

    <TextView
        android:id="@+id/chip03"
        android:layout_width="@dimen/sizeChip50"
        android:layout_height="@dimen/sizeChip50"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_24"
        android:background="@drawable/chip_empty"
        android:layout_marginStart="@dimen/margin_1x"
        android:layout_marginTop="@dimen/margin_1x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chip02"/>

    <TextView
        android:id="@+id/chip04"
        android:layout_width="@dimen/sizeChip50"
        android:layout_height="@dimen/sizeChip50"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_24"
        android:background="@drawable/chip_empty"
        android:layout_marginStart="@dimen/margin_1x"
        android:layout_marginTop="@dimen/margin_1x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chip03"/>

    <ImageView
        android:id="@+id/chipBN01"
        android:layout_width="@dimen/sizeChipBN"
        android:layout_height="@dimen/sizeChipBN"
        android:background="@drawable/chip_empty"
        android:layout_marginStart="@dimen/margin_1x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chip04"/>
    <ImageView
        android:id="@+id/chipBN02"
        android:layout_width="@dimen/sizeChipBN"
        android:layout_height="@dimen/sizeChipBN"
        android:background="@drawable/chip_empty"
        android:layout_marginStart="@dimen/margin_1x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chipBN01"/>
    <ImageView
        android:id="@+id/chipBN03"
        android:layout_width="@dimen/sizeChipBN"
        android:layout_height="@dimen/sizeChipBN"
        android:background="@drawable/chip_empty"
        android:layout_marginStart="@dimen/margin_1x"
        android:layout_marginTop="@dimen/margin_1x"
        app:layout_constraintTop_toBottomOf="@id/chipBN01"
        app:layout_constraintLeft_toRightOf="@id/chip04"/>
    <ImageView
        android:id="@+id/chipBN04"
        android:layout_width="@dimen/sizeChipBN"
        android:layout_height="@dimen/sizeChipBN"
        android:background="@drawable/chip_empty"
        android:layout_marginStart="@dimen/margin_1x"
        android:layout_marginTop="@dimen/margin_1x"
        app:layout_constraintTop_toBottomOf="@id/chipBN01"
        app:layout_constraintLeft_toRightOf="@id/chipBN01"/>

</androidx.constraintlayout.widget.ConstraintLayout>